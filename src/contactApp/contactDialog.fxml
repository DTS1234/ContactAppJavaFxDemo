<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="contactApp.ContactController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        Fill in the information for the new Contact
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="First name: " GridPane.columnIndex="0" GridPane.rowIndex="0"></Label>
            <TextField fx:id="firstNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>

            <Label text="Last name: " GridPane.columnIndex="1" GridPane.rowIndex="0"></Label>
            <TextField fx:id="lastNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextField>

            <Label text="Phone number: " GridPane.columnIndex="2" GridPane.rowIndex="0"></Label>
            <TextField fx:id="phoneNumberField" GridPane.rowIndex="2" GridPane.columnIndex="1"></TextField>

            <Label text="Notes: " GridPane.columnIndex="3" GridPane.rowIndex="0"></Label>
            <TextField fx:id="notesField" GridPane.rowIndex="3" GridPane.columnIndex="3"></TextField>
        </GridPane>
    </content>
</DialogPane>
